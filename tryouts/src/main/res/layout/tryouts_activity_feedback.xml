<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_feedback_layout_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/feedback_view_transparent_space"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_view_transparent_space"
            android:layout_margin="2dp"
            android:background="@drawable/tryouts_white_rounded_rectangle"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="32dp">

            <EditText
                android:id="@+id/feedback_edittext_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/tryouts_blue_rounded_rectangle"
                android:gravity="center"
                android:hint="@string/tryouts_your_name"
                android:padding="16dp"
                android:textColor="@color/tryouts_black"
                android:textColorHighlight="@null"
                android:textColorHint="@android:color/secondary_text_dark" />

            <EditText
                android:id="@+id/feedback_edittext_feedback"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/tryouts_orange_rounded_rectangle"
                android:gravity="top|left"
                android:hint="@string/tryouts_feedback"
                android:padding="16dp"
                android:textColor="@color/tryouts_black"
                android:textColorHint="@android:color/secondary_text_dark" />


            <CheckBox
                android:id="@+id/feedback_checkbox_screenshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:buttonTint="@color/tryouts_gray"
                android:text="@string/tryouts_add_screenshot_option"
                android:textColor="@color/tryouts_gray" />

            <Button
                android:id="@+id/feedback_button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tryouts_green_rounded_rectangle"
                android:padding="16dp"
                android:text="@string/tryouts_submit"
                android:textColor="@color/tryouts_white" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:src="@drawable/im_tryouts_icon" />

    </RelativeLayout>
</ScrollView>
